<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="site.metacoding.red.domain.player.PlayerDao">
	<!-- TeamDao 인터페이스를 부모로 잡고, 이 xml 파일이 자식이 되어서(상속해서) IoC컨테이너에 저장. 자바 클래스가 
		자동으로 생성된다 -->
	<insert id="insert">

	</insert>

	<select id="findAll"
		resultType="site.metacoding.red.domain.player.Player">
		SELECT p.id, row_number() over(order BY p.id asc) as NO,
		t.name AS team_name, p.position, p.name, p.created_at
		FROM player p
		INNER JOIN team t
		ON p.team_id = t.id;
	</select>

	<select id="findById"
		resultType="site.metacoding.red.domain.player.Player">

	</select>

	<insert id="update">

	</insert>

	<insert id="deleteById">

	</insert>


</mapper>